<div class="top-bar">
<img width="30px" height="30px" src="/img/arrow-back.png"<button onclick="history.back()"></button>
<div class="logo-name">
<img class="logo" src="/img/cryptologo.png"/><h1>Ironcrypto</h1>
</div>
</div>

<h1>Select up to 6 Coins</h1>
{{#if error}}
<p style="color:red">{{error}}</p>
{{/if}}

<form method="POST" action="/select-favorites">
<div class="allcoins">
{{#each data.data}}
<li class="each-list-coin"><img src = "{{image.thumb}}" alt="CryptoIcon"><p class="coin-list-name">{{id}}</p><input type="checkbox" class="checkboxFavorites" name="cryptoCoins" value={{id}} /></li>
{{/each}}
</div>

<button class="button" type="submit">Select Favorites</button>

</form>
</div>

